<Window x:Class="WPF_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"

    Title="MainWindow" Height="768" Width="1024" Background="PaleGoldenrod">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <MenuItem Header="_New" Click="MenuItem_Click"/>
                    <MenuItem Header="_Open" Click="MenuItem_Click_1"/>
                    <MenuItem Header="_Save"/>
                    <Separator/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="GameObject" Height="30" >
                    <MenuItem Header="_CreateMesh" Click="Btn_CreateMesh"/>
                    <MenuItem Header="_CreateEffect" />
                    <MenuItem Header="_CreateCamera"/>
                    <MenuItem Header="_CreateLight" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
        </StackPanel>
        <TabControl Grid.Row ="1">
            <TabItem Header="Hierarchy">
                <!-- 여기서 하이어라키 -->
                <ListBox x:Name="HierarchyList"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top" Height="870" Width="198">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="_CreateMesh" Foreground="Black" Click="Btn_CreateMesh"/>
                            <MenuItem Header="_CreateEffect" Foreground="Black" />
                            <MenuItem Header="_CreateCamera" Foreground="Black" />
                            <MenuItem Header="_CreateLight" Foreground="Black"/>

                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>


            </TabItem>
        </TabControl>
        <TabControl Grid.Row="1" Grid.Column="1">
            <TabItem Header="Scene">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Name="RenderState" Width="70" VerticalAlignment="Center" Foreground="White">
                            RenderState
                        </TextBlock>
                        <ComboBox Name="RenderStateBox" Width="100" VerticalAlignment="Top" SelectionChanged="RenderStateBox_SelectionChanged" SelectedIndex="0">
                            <ComboBoxItem Content="Shaded" Selected="Solid_Selected"/>
                            <ComboBoxItem Content="WireFrame" Selected="WireFrame_Selected"/>
                        </ComboBox>
                        <TextBlock Width="300"/> <!--빈 공간-->
                        <TextBlock Width="40" VerticalAlignment="Center" TextAlignment="Center" Foreground="White"> Gizmo</TextBlock>
                        <CheckBox VerticalAlignment="Center"/>
                    </StackPanel>
                    <Image x:Name="imgelt"
                           MouseMove="Dx_MouseMove" MouseDown="Dx_MouseDown" MouseUp="Dx_MouseUp">
                        <Image.Source>
                            <i:D3DImage x:Name="d3dimg"/>
                        </Image.Source>
                    </Image>
                </StackPanel>

            </TabItem>
            <TabItem Header="Game">
                
            </TabItem>
        </TabControl>
        <TabControl Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" >
            <TabItem Header="Inspector">
                <!-- Inspector -->
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox VerticalAlignment="Center" 
                                  Checked="Active_Checked"
                                  Unchecked="Active_Unchecked"  
                                  IsChecked="True"/>
                        <TextBlock Width="50" TextAlignment="Center">Name</TextBlock>
                        <TextBox Width="150" x:Name="GameObjectName" TextChanged="GameObjectName_TextChanged"/>
                    </StackPanel>
                    <GroupBox x:Name="TransformData" IsEnabled="True">
                        <GroupBox.Header>
                            <Label>Transform Data</Label>
                        </GroupBox.Header>
                        <StackPanel>
                            <TextBlock >Position</TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="20" HorizontalAlignment="Center">X</TextBlock>
                                <TextBox x:Name="PositionX" Width="50" TextChanged="PositionX_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Y</TextBlock>
                                <TextBox x:Name="PositionY" Width="50" TextChanged="PositionY_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Z</TextBlock>
                                <TextBox x:Name="PositionZ" Width="50" TextChanged="PositionZ_TextChanged">0</TextBox>
                            </StackPanel>
                            <TextBlock>Rotation</TextBlock>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Width="20" HorizontalAlignment="Center">X</TextBlock>
                                <TextBox x:Name="RotationX" Width="50" TextChanged="RotationX_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Y</TextBlock>
                                <TextBox x:Name="RotationY" Width="50" TextChanged="RotationY_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Z</TextBlock>
                                <TextBox x:Name="RotationZ" Width="50" TextChanged="RotationZ_TextChanged">0</TextBox>
                            </StackPanel>
                            <TextBlock>Rotation</TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="20" HorizontalAlignment="Center">X</TextBlock>
                                <TextBox x:Name="ScaleX" Width="50" TextChanged="ScaleX_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Y</TextBlock>
                                <TextBox x:Name="ScaleY" Width="50" TextChanged="ScaleY_TextChanged">0</TextBox>
                                <TextBlock Width="20" HorizontalAlignment="Center">Z</TextBlock>
                                <TextBox x:Name="ScaleZ" Width="50" TextChanged="ScaleZ_TextChanged">0</TextBox>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <TextBlock/>
                    <GroupBox x:Name="MeshData" IsEnabled="True">
                        <GroupBox.Header>
                            <Label>Mesh Data</Label>
                        </GroupBox.Header>
                        <StackPanel>
                            <StackPanel  Orientation="Horizontal">
                                <TextBlock Width="60">MeshFile</TextBlock>
                                <TextBox x:Name="MeshFilePath" Width="100" TextChanged="MeshFile_TextChanged"></TextBox>
                                <Button Width="70" Click="Button_MeshLoad">Load</Button>
                            </StackPanel>
                            <TextBlock/>
                            <StackPanel  Orientation="Horizontal">
                                <TextBlock Width="60">Diffuse</TextBlock>
                                <TextBox x:Name="DiffuseFilePath" Width="100" TextChanged="DiffuseFile_TextChanged"/>
                                <Button Width="70" Click="Button_DiffuseLoad">Load</Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="NavMesh">

            </TabItem>
        </TabControl>
        <TabControl Grid.Row="2" Grid.ColumnSpan="2">
            <TabItem Header="Project">
                <StackPanel Orientation="Horizontal">
                    <TreeView Width="150">
                        <TreeViewItem Header="Assets">
                             <TreeViewItem Header="Mesh" MouseDown="Assets_Mesh_MouseDown"/>
                            <TreeViewItem Header="Texture" MouseDown="Assets_Texture_MouseDown"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Datas">
                            <TreeViewItem Header="GameObjectData"/>
                            <TreeViewItem Header="MeshData" />
                        </TreeViewItem>
                    </TreeView>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Width="610" Height="200">
                        <WrapPanel x:Name="ProjectItems">
                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
            <TabItem Header="Console">
                <StackPanel Orientation="Horizontal">
                    <ScrollViewer x:Name ="ConsoleScrollViewer"  
                                  Width="400" Height="200"
                                  VerticalScrollBarVisibility="Auto" 
                                  Grid.ColumnSpan="2">
                        <WrapPanel  x:Name="ConsoleMessages" Orientation="Vertical">
                        </WrapPanel>
                    </ScrollViewer>
                    <StackPanel Width="360">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" Width="130"> EditorFrame</TextBlock>
                            <TextBlock Foreground="White" x:Name="EditorFrame">0</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" Width="130">DxScreenSize</TextBlock>
                            <TextBlock Foreground="White" Width="20">X :</TextBlock>
                            <TextBlock Foreground="White"  x:Name="DxScreenSizeX" Width="80">0</TextBlock>
                            <TextBlock Foreground="White"  Width="20">Y :</TextBlock>
                            <TextBlock Foreground="White"  x:Name="DxScreenSizeY" Width="80">0</TextBlock>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" Width="130">DXMousePosition</TextBlock>
                            <TextBlock Foreground="White"  Width="20">X :</TextBlock>
                            <TextBlock Foreground="White" x:Name="DXMousePosX" Width="80">0</TextBlock>
                            <TextBlock Foreground="White"  Width="20">Y :</TextBlock>
                            <TextBlock Foreground="White" x:Name="DXMousePosY" Width="80">0</TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" Width="130">EditorMousePosition</TextBlock>
                            <TextBlock Foreground="White"  Width="20">X :</TextBlock>
                            <TextBlock Foreground="White" x:Name="EditorMousePosX" Width="80">0</TextBlock>
                            <TextBlock Foreground="White"  Width="20">Y :</TextBlock>
                            <TextBlock Foreground="White" x:Name="EditorMousePosY" Width="80">0</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>


</Window>
